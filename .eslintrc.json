{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended" // This ensures Prettier's rules are included
    ],
    "parserOptions": {
      "ecmaVersion": 12
    },
    "rules": {
      // Custom rules can be defined here
      "prettier/prettier": "error" // Show Prettier issues as ESLint errors
    }
  }
  